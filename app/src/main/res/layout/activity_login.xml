<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_without_title"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Welcome Back "
        android:textColor="@color/black"
        android:textSize="45dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>
    <!--        android:fontFamily="@font/urbanist_regular"/>-->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Restaurant"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            tools:ignore="TextSizeCheck" />
        <!--            android:fontFamily="@font/urbanist_bold"-->


        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:maxEms="3"
            android:textColor="@color/black"
            android:hint="Enter your Restaurant ID !"
            android:textColorHint="#716966"
            android:inputType="text"
            android:minHeight="48dp" />
        <!--            android:fontFamily="@font/urbanist_bold"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:ems="10"
            android:textColor="@color/black"

            android:hint="Enter your UserName !"
            android:textColorHint="#716966"
            android:inputType="text"
            android:minHeight="48dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:ems="10"
            android:textColor="@color/black"

            android:hint="Enter your Pasword !"
            android:textColorHint="#716966"
            android:inputType="textPassword"
            android:minHeight="48dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Remember"
            android:textColor="#716966"
            app:buttonTint="#716966" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_primary"
        android:text="Sign in"
        app:backgroundTint="#A4634D" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="You have an account?"
            android:textColor="#716966" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textStyle="bold"
            android:textColor="#716966"/>
    </LinearLayout>

</LinearLayout>